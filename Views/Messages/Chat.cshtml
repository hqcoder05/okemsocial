@model okem_social.Models.Conversation

@{
    var currentUserId = (int)(ViewBag.CurrentUserId ?? 0);
    var otherMember = Model.Members.FirstOrDefault(m => m.UserId != currentUserId);
    var otherUser = otherMember?.User;
    var otherUserId = otherMember?.UserId ?? 0;
    var otherName = otherUser?.FullName ?? otherUser?.Email ?? "Người dùng";
    var otherMembers = Model.Members
        .Where(m => m.UserId != currentUserId)
        .Select(m => m.User?.FullName ?? m.User?.Email ?? "Người dùng")
        .ToList();
    var title = otherMembers.Any() ? string.Join(", ", otherMembers) : "Đoạn chat";
}

<div class="chat-root h-100"
     data-chat-root="1"
     data-conversation-id="@Model.Id"
     data-current-user-id="@currentUserId"
     data-peer-user-id="@otherUserId">

    <div class="d-flex flex-column h-100" style="min-height: 350px;">

        <div class="border-bottom px-3 py-2 d-flex align-items-center justify-content-between bg-white">
            <div class="d-flex flex-column">
                <span class="fw-semibold">@title</span>
                <small class="text-muted">Cuộc trò chuyện</small>
            </div>

            @if (otherUserId != 0)
            {
                <div class="d-flex gap-2">
                    <button type="button"
                            class="btn btn-light btn-sm rounded-circle"
                            title="Gọi thoại"
                            data-call="voice"
                            data-target-user-id="@otherUserId"
                            style="width: 40px; height: 40px;">
                        <i class="fa-solid fa-phone"></i>
                    </button>
                    <button type="button"
                            class="btn btn-light btn-sm rounded-circle"
                            title="Gọi video"
                            data-call="video"
                            data-target-user-id="@otherUserId"
                            style="width: 40px; height: 40px;">
                        <i class="fa-solid fa-video"></i>
                    </button>
                </div>
            }
        </div>

        <div id="callContainer" class="call-container d-none">
            <div class="call-header px-3 py-2 d-flex align-items-center justify-content-between">
                <div class="d-flex flex-column">
                    <strong id="callTitle" class="text-white">@otherName</strong>
                    <small id="callStatusText" class="call-status">Đang kết nối...</small>
                </div>
                <button type="button"
                        class="btn btn-link text-white p-0"
                        title="Thu nhỏ"
                        onclick="minimizeCall()">
                    <i class="fa-solid fa-minus"></i>
                </button>
            </div>

            <div class="call-video-container position-relative">
                <video id="remoteVideo"
                       class="remote-video w-100 h-100"
                       autoplay
                       playsinline>
                </video>

                <video id="localVideo"
                       class="local-video position-absolute"
                       autoplay
                       muted
                       playsinline>
                </video>

                <!-- Hidden audio element specifically for voice-only calls -->
                <audio id="remoteAudio" autoplay style="display:none;"></audio>

                <!-- Added id for backward compatibility and ARIA attributes.
                     JS uses .call-overlay but older code referenced #loadingOverlay — keep both. -->
                <div id="loadingOverlay" class="call-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center" role="status" aria-hidden="true">
                    <div class="text-center text-white">
                        <div class="avatar-circle-large mb-3">
                            @{
                                var initial = !string.IsNullOrEmpty(otherName)
                                ? otherName.Substring(0, 1).ToUpper()
                                : "?";
                            }
                            @initial
                        </div>
                        <h4>@otherName</h4>
                        <div class="spinner-border spinner-border-sm mt-2" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="call-controls px-4 py-3 d-flex justify-content-center gap-3">
                <button type="button"
                        class="btn btn-light btn-lg rounded-circle call-control-btn"
                        title="Tắt/Bật microphone"
                        data-call="toggle-audio"
                        id="btnToggleAudio">
                    <i class="fa-solid fa-microphone"></i>
                </button>

                <button type="button"
                        class="btn btn-light btn-lg rounded-circle call-control-btn d-none"
                        title="Tắt/Bật camera"
                        data-call="toggle-video"
                        id="btnToggleVideo">
                    <i class="fa-solid fa-video"></i>
                </button>

                <button type="button"
                        class="btn btn-danger btn-lg rounded-circle call-control-btn"
                        title="Kết thúc"
                        data-call="hangup">
                    <i class="fa-solid fa-phone-slash"></i>
                </button>
            </div>
        </div>

        <div id="chatMessages" class="flex-grow-1 overflow-auto px-3 py-3">
            @if (Model.Messages != null && Model.Messages.Any())
            {
                foreach (var msg in Model.Messages.OrderBy(m => m.CreatedAt))
                {
                    var isMine = msg.SenderId == currentUserId;
                    var fullName = msg.Sender?.FullName ?? msg.Sender?.Email ?? "Người dùng";
                    var msgInitial = !string.IsNullOrEmpty(fullName)
                    ? fullName.Substring(0, 1).ToUpper()
                    : "?";
                    <div class="message-item @(isMine ? "sent" : "received") mb-3"
                         data-message-id="@msg.Id">
                        @if (isMine)
                        {
                            <div class="d-flex gap-2 align-items-start justify-content-end">
                                <div class="message-bubble sent-bubble"
                                     style="display:inline-block;padding:8px 12px;border-radius:16px;
                                                                      max-width:260px;min-width:80px;
                                                                    white-space:normal;word-break:break-word;text-align:left;">
                                    <p class="message-text mb-1">@msg.Content</p>
                                    <small class="message-time d-block">
                                        @msg.CreatedAt.ToLocalTime().ToString("HH:mm")
                                    </small>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex gap-2 align-items-start">
                                <div class="avatar-circle avatar-sm">@msgInitial</div>
                                <div class="message-bubble received-bubble"
                                     style="display:inline-block;padding:8px 12px;border-radius:16px;
                                                                    max-width:260px;min-width:80px;
                                                                    white-space:normal;word-break:break-word;text-align:left;">
                                    <div class="mb-1">
                                        <strong>@fullName</strong>
                                    </div>
                                    <p class="message-text mb-1">@msg.Content</p>
                                    <small class="text-muted message-time d-block">
                                        @msg.CreatedAt.ToLocalTime().ToString("HH:mm")
                                    </small>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
            else
            {
                <div class="text-center text-muted py-4">
                    Chưa có tin nhắn nào. Hãy bắt đầu cuộc trò chuyện 👋
                </div>
            }
        </div>

        <form id="formSendMessage" class="border-top px-3 py-2 bg-light">
            <div class="input-group">
                <textarea name="content"
                          class="form-control border-0 shadow-none"
                          rows="1"
                          placeholder="Nhập tin nhắn..."
                          style="resize: none;"></textarea>
                <button type="submit" class="btn btn-primary rounded-circle ms-2"
                        style="width: 40px; height: 40px;">
                    <i class="fa-solid fa-paper-plane"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<style>
