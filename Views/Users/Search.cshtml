@model List<okem_social.Models.User>
@{
    ViewData["Title"] = "Tìm bạn";
    string keyword = ViewBag.Keyword ?? "";
}
<h2>Tìm bạn</h2>

<form method="get" class="mb-3">
    <div class="input-group">
        <input class="form-control" name="keyword" value="@keyword" placeholder="Nhập tên hoặc email">
        <button class="btn btn-primary" type="submit">Tìm</button>
    </div>
</form>

@if (Model.Count == 0)
{
    <p>Không có kết quả.</p>
}
else
{
    <table class="table table-hover">
        <thead><tr><th>Họ tên</th><th>Email</th><th></th></tr></thead>
        <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.FullName</td>
                <td>@u.Email</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@u.Id">Xem</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}