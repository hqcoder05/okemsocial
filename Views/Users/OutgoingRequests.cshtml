@model List<okem_social.Models.User>
@{
    var target = (okem_social.Models.User)ViewBag.Target;
    ViewData["Title"] = $"Lời mời kết bạn đã gửi của {target.FullName}";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="mb-4">
                <a asp-action="Details" asp-route-id="@target.Id" class="btn btn-outline-secondary mb-3" style="border-radius: 12px;">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại hồ sơ
                </a>
                <h2 class="fw-bold mb-2">
                    <i class="fas fa-paper-plane me-2" style="color: var(--success-color);"></i>
                    Lời mời kết bạn đã gửi
                </h2>
                <p class="text-muted">@target.FullName đã gửi @Model.Count lời mời</p>
            </div>

            @if (Model.Count == 0)
            {
                <div class="card border-0 shadow-sm" style="border-radius: 20px;">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-envelope-open-text fa-4x mb-3" style="color: #e5e7eb;"></i>
                        <h5 class="mb-2">Bạn chưa gửi lời mời kết bạn nào</h5>
                        <p class="text-muted mb-0">Hãy tìm bạn bè và gửi lời mời kết bạn.</p>
                    </div>
                </div>
            }
            else
            {
                <div class="row g-3">
                    @foreach (var u in Model)
                    {
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm h-100" style="border-radius: 16px; transition: all 0.3s ease;">
                                <div class="card-body p-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-medium me-3"
                                             style="width: 60px; height: 60px; background: linear-gradient(135deg, #10b981 0%, #059669 100%);
                                                            border-radius: 16px; display:flex; align-items:center; justify-content:center;
                                                            font-size:24px; font-weight:700; color:white;">
                                            @u.FullName?.Substring(0, 1).ToUpper()
                                        </div>
                                        <div class="flex-grow-1 min-width-0">
                                            <h6 class="fw-bold mb-1 text-truncate">@u.FullName</h6>
                                            <p class="text-muted small mb-0 text-truncate">
                                                <i class="fas fa-envelope me-1"></i>@u.Email
                                            </p>
                                        </div>
                                        <div class="ms-2 d-flex gap-2">
                                            <a class="btn btn-sm btn-outline-primary"
                                               asp-action="Details" asp-route-id="@u.Id">
                                                <i class="fas fa-user"></i>
                                            </a>
                                            <form method="post" asp-action="Cancel" asp-route-id="@u.Id">
                                                <button type="submit" class="btn btn-sm btn-secondary">
                                                    <i class="fas fa-times me-1"></i>Hủy lời mời
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 20px 25px -5px rgba(0,0,0,0.15) !important;
    }

    .min-width-0 {
        min-width: 0;
    }
</style>
