@model List<okem_social.Models.User>
@{
    var target = (okem_social.Models.User)ViewBag.Target;
    ViewData["Title"] = $"Followers của {target.FullName}";
}
<h2>Followers của @target.FullName</h2>

@if (Model.Count == 0)
{
    <p>Chưa có ai theo dõi.</p>
}
else
{
    <table class="table table-hover">
        <thead><tr><th>Họ tên</th><th>Email</th><th></th></tr></thead>
        <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.FullName</td>
                <td>@u.Email</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@u.Id">Xem</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}