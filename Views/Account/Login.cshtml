@{
    ViewData["Title"] = "Đăng nhập";
    var returnUrl = ViewBag.ReturnUrl as string;
}

<div class="min-vh-100 d-flex align-items-center" style="background: linear-gradient(135deg, #f5f7fa 0%, #e8eef5 100%);">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">
                <!-- Logo/Brand -->
                <div class="text-center mb-4">
                    <div class="mb-3">
                        <div style="width: 64px; height: 64px; background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); border-radius: 16px; display: inline-flex; align-items: center; justify-content: center; box-shadow: 0 10px 25px rgba(99, 102, 241, 0.3);">
                            <i class="fas fa-users fa-2x text-white"></i>
                        </div>
                    </div>
                    <h2 class="fw-bold mb-2" style="color: #1f2937;">Chào mừng trở lại!</h2>
                    <p class="text-muted">Đăng nhập để kết nối với bạn bè</p>
                </div>

                <!-- Login Card -->
                <div class="modern-card p-4">
                    @if (TempData["err"] != null)
                    {
                        <div class="alert-modern alert-modern-danger mb-4">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["err"]
                        </div>
                    }

                    <form asp-action="Login" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="returnUrl" value="@returnUrl" />

                        <div class="mb-3">
                            <label for="email" class="form-label fw-semibold text-sm" style="color: #374151;">
                                <i class="fas fa-envelope me-1" style="color: #6366f1;"></i>
                                Email
                            </label>
                            <input type="email" 
                                   class="input-modern" 
                                   id="email" 
                                   name="email" 
                                   placeholder="your.email@example.com" 
                                   required
                                   autocomplete="email">
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label fw-semibold text-sm" style="color: #374151;">
                                <i class="fas fa-lock me-1" style="color: #6366f1;"></i>
                                Mật khẩu
                            </label>
                            <div class="position-relative">
                                <input type="password" 
                                       class="input-modern" 
                                       id="password" 
                                       name="password" 
                                       placeholder="••••••••" 
                                       required
                                       autocomplete="current-password"
                                       style="padding-right: 3rem;">
                                <button type="button" 
                                        class="btn btn-link position-absolute end-0 top-50 translate-middle-y p-0 me-3" 
                                        id="togglePassword" 
                                        style="text-decoration: none; z-index: 10;">
                                    <i class="fas fa-eye text-muted"></i>
                                </button>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" 
                                       type="checkbox" 
                                       id="rememberMe" 
                                       name="rememberMe"
                                       style="border-radius: 4px; border: 1.5px solid #d1d5db;">
                                <label class="form-check-label text-sm text-muted" for="rememberMe">
                                    Ghi nhớ
                                </label>
                            </div>
                            <a href="#" class="text-sm fw-semibold" style="color: #6366f1; text-decoration: none;">
                                Quên mật khẩu?
                            </a>
                        </div>

                        <button type="submit" class="btn-modern btn-modern-primary w-100 mb-3">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Đăng nhập
                        </button>

                        <div class="text-center">
                            <p class="text-sm text-muted mb-0">
                                Chưa có tài khoản? 
                                <a asp-action="Register" class="fw-bold" style="color: #6366f1; text-decoration: none;">
                                    Đăng ký ngay
                                </a>
                            </p>
                        </div>
                    </form>
                </div>

                <!-- Social Login (Optional) -->
                <div class="text-center mt-4">
                    <div class="position-relative mb-3">
                        <hr style="border-color: #e5e7eb;">
                        <span class="position-absolute top-50 start-50 translate-middle px-3 bg-white text-xs text-muted">
                            Hoặc tiếp tục với
                        </span>
                    </div>
                    <div class="d-flex gap-2 justify-content-center">
                        <button class="btn btn-outline-secondary" 
                                style="width: 44px; height: 44px; border-radius: 12px; border: 1.5px solid #e5e7eb;" 
                                disabled
                                title="Sắp ra mắt">
                            <i class="fab fa-google"></i>
                        </button>
                        <button class="btn btn-outline-secondary" 
                                style="width: 44px; height: 44px; border-radius: 12px; border: 1.5px solid #e5e7eb;" 
                                disabled
                                title="Sắp ra mắt">
                            <i class="fab fa-facebook-f"></i>
                        </button>
                        <button class="btn btn-outline-secondary" 
                                style="width: 44px; height: 44px; border-radius: 12px; border: 1.5px solid #e5e7eb;" 
                                disabled
                                title="Sắp ra mắt">
                            <i class="fab fa-github"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        // Toggle password visibility
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('password');
        
        togglePassword.addEventListener('click', function () {
            const icon = this.querySelector('i');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
                icon.style.color = '#6366f1';
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
                icon.style.color = '#9ca3af';
            }
        });
    </script>
}
