@{
    ViewData["Title"] = "Tạo bài viết";
}

<div class="page-transition">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Header -->
            <div class="page-header mb-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="mb-2">
                            <i class="fa-solid fa-pen-to-square me-2"></i>Tạo bài viết
                        </h1>
                        <p class="text-muted mb-0">Chia sẻ suy nghĩ, hình ảnh hoặc video của bạn</p>
                    </div>
                </div>
            </div>

            <!-- Form tạo bài viết -->
            <div class="modern-card">
                <form id="createPostForm">
                    <!-- Quote / Caption -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Quote / Nội dung</label>
                        <textarea id="captionInput"
                                  class="form-control"
                                  rows="4"
                                  placeholder="Chia sẻ một câu quote, suy nghĩ hoặc trạng thái của bạn..."></textarea>
                    </div>

                    <!-- Upload media -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Ảnh / Video</label>
                        <div class="border rounded-3 p-3 d-flex flex-column align-items-center justify-content-center text-center"
                             style="border-style: dashed;">
                            <i class="fa-solid fa-cloud-arrow-up fa-2x mb-2 text-primary"></i>
                            <p class="mb-1">Kéo thả file vào đây hoặc chọn từ máy</p>
                            <p class="text-muted small mb-2">Hỗ trợ ảnh (.jpg, .png, .gif, .webp) và video (.mp4, .webm, .ogg)</p>

                            <input type="file"
                                   id="mediaInput"
                                   class="form-control"
                                   accept="image/*,video/*"
                                   style="max-width: 280px;" />

                            <div class="mt-3 w-100" id="mediaPreviewContainer" style="display:none;">
                                <div class="mb-2 text-start">
                                    <span class="badge bg-primary">Preview</span>
                                </div>
                                <div id="imagePreview" class="d-none">
                                    <img id="previewImage" src="" class="img-fluid rounded-3" />
                                </div>
                                <div id="videoPreview" class="d-none">
                                    <video id="previewVideo" class="w-100 rounded-3" controls></video>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-controller="Posts" asp-action="Feed" class="btn btn-light">
                            <i class="fa-solid fa-arrow-left me-1"></i>Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary" id="btnPublish">
                            <i class="fa-solid fa-paper-plane me-2"></i>Đăng bài
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const captionInput = document.getElementById("captionInput");
        const mediaInput = document.getElementById("mediaInput");
        const form = document.getElementById("createPostForm");
        const btnPublish = document.getElementById("btnPublish");

        const mediaPreviewContainer = document.getElementById("mediaPreviewContainer");
        const imagePreview = document.getElementById("imagePreview");
        const videoPreview = document.getElementById("videoPreview");
        const previewImage = document.getElementById("previewImage");
        const previewVideo = document.getElementById("previewVideo");

        mediaInput.addEventListener("change", function () {
            const file = this.files[0];
            if (!file) {
                mediaPreviewContainer.style.display = "none";
                imagePreview.classList.add("d-none");
                videoPreview.classList.add("d-none");
                return;
            }

            const url = URL.createObjectURL(file);
            mediaPreviewContainer.style.display = "block";

            if (file.type.startsWith("image/")) {
                imagePreview.classList.remove("d-none");
                videoPreview.classList.add("d-none");
                previewImage.src = url;
            } else if (file.type.startsWith("video/")) {
                videoPreview.classList.remove("d-none");
                imagePreview.classList.add("d-none");
                previewVideo.src = url;
            } else {
                mediaPreviewContainer.style.display = "none";
            }
        });

        form.addEventListener("submit", async function (e) {
            e.preventDefault();

            const caption = captionInput.value.trim();
            const file = mediaInput.files[0];

            if (!caption && !file) {
                alert("Hãy nhập nội dung (quote) hoặc chọn ít nhất một ảnh / video.");
                return;
            }

            btnPublish.disabled = true;
            btnPublish.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Đang đăng...';

            try {
                let imageUrl = null;
                let videoUrl = null;

                // Nếu có file, upload trước
                if (file) {
                    const fd = new FormData();
                    fd.append("file", file);

                    const uploadRes = await fetch("/api/media/upload", {
                        method: "POST",
                        body: fd
                    });

                    if (!uploadRes.ok) {
                        const errData = await uploadRes.json().catch(() => ({}));
                        throw new Error(errData.message || "Upload file thất bại");
                    }

                    const uploadData = await uploadRes.json();
                    if (uploadData.type === "image") {
                        imageUrl = uploadData.url;
                    } else if (uploadData.type === "video") {
                        videoUrl = uploadData.url;
                    }
                }

                // Gửi lên API posts
                const payload = {
                    caption: caption,
                    imageUrl: imageUrl,
                    videoUrl: videoUrl
                };

                const res = await fetch("/api/posts", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify(payload)
                });

                if (!res.ok) {
                    const errData = await res.json().catch(() => ({}));
                    throw new Error(errData.message || "Tạo bài viết thất bại");
                }

                // Thành công -> chuyển về Feed
                window.location.href = "/Posts/Feed";
            } catch (err) {
                console.error(err);
                alert(err.message || "Có lỗi xảy ra. Vui lòng thử lại.");
            } finally {
                btnPublish.disabled = false;
                btnPublish.innerHTML = '<i class="fa-solid fa-paper-plane me-2"></i>Đăng bài';
            }
        });
    </script>
}
